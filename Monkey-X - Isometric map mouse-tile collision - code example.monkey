Class MyGame Extends App

    Method OnCreate()
        SetUpdateRate(60)
           For Local i = 0 Until mapwidth
            map[i] = New Int[mapheight]
        Next
    End Method
    Method OnUpdate()    
    End Method
    Method OnRender()
        Cls 0,0,0 
        SetColor 255,255,255
        drawisomap(300,100)
        SetColor 255,255,255
        DrawText "Isometric example - tilex:"+tilex+" tiley:"+tiley,0,0
    End Method
End Class


Function drawisomap:Void(x:Int,y:Int)
    Local x2:Int = x
    Local y2:Int = y
    Local x3:Int = MouseX()
    Local y3:Int = MouseY()
    For Local i=0 To mapheight
        Local x1 = x2
        Local y1 = y2
        x2=x2-32
        y2=y2+16
        For Local ii=0 To mapwidth
            drawitile(x1,y1)
            If rectsoverlap(x3,y3,1,1,x1,y1,64,32)
            Local mx:Int=x3-x1
            Local my:Int=y3-y1
                If ict[my][mx] = 1
                    tilex = ii
                    tiley = i
                End If
            End If
            DrawText ""+ii+","+i,x1+32,y1+16,0.5,0.5
            x1=x1+33
            y1=y1+16
        Next        
    Next    
End Function

Function drawitile:Void(x1:Int,y1:Int)
    SetColor 255,255,255
    DrawLine x1+31,y1,x1+61,y1+16
    DrawLine x1+31,y1,x1,y1+16
    DrawLine x1+31,y1+31,x1+63,y1+16
    DrawLine x1+31,y1+31,x1,y1+16
End Function

Function rectsoverlap:Bool(x1:Int, y1:Int, w1:Int, h1:Int, x2:Int, y2:Int, w2:Int, h2:Int)
    If x1 >= (x2 + w2) Or (x1 + w1) <= x2 Then Return False
    If y1 >= (y2 + h2) Or (y1 + h1) <= y2 Then Return False
    Return True
End Function   

Function Main()
    New MyGame()
End Function
